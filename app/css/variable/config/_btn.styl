// ============================ Buttons ============================
.btn
	br(4px)
	tr(all)
	display inline-block
	background none
	border 0
	text-align: center
	font-family "Handbook"
	font-weight: 300
	&:hover
		cursor pointer

.btn--xs
	@extend .btn
	padding 8px
	font-size: 14px
.btn--sm
	@extend .btn
	@extend .type--md
	padding 12px 25px

.btn--md
	@extend .btn
	@extend .type--lg
	padding 12px 45px

.btn--fix
	@extend .btn
	@extend .type--lg
	padding 12px
	width: 250px

.btn--extend
	margin-bottom: 20px

.btn--mid
	flex(mid)

.btn--lg
	@extend .btn
	font-size 20px
	padding 10px 30px

.btn--mobile
	@extend .btn
	+below(768px)
		width 100%
		text-align center

.btn--mark
	@extend .btn
	color white
	background $mark
	.nav-icon
		fill white
	&:hover
		background-color lighten($mark,5)
		color white!important
	&:active
		background-color lighten($mark,5)
	input[type="submit"]
		border 0
	.nav-icon
		fill white

.btn--disable
	@extend .disabled
	border 1px solid $border-color
	background-color #ffffff
	color #000000

.btn--light
	@extend .btn
	border 2px solid $mark
	background-color #ffffff
	color $mark
	&:hover
		color white
		background: $mark
	.nav-icon
		fill $mark

.btn--empty
	@extend .btn
	border 1px solid $border-color
	color $text-color
	background: white
	&:hover
		color white
		border 1px solid $mark
		background: $mark
	.nav-icon
		fill $mark

.btn--white
	@extend .btn
	border 1px solid rgba(255, 255, 255, 0.9)
	color rgba(255, 255, 255, 0.9)
	.nav-icon
		fill rgba(255, 255, 255, 0.9)

.btn--icon
	flex(mid)
	.nav-icon
		margin-left: 10px

.nav-icon
	size 20px
	display inline-block

.btn--icon--left
	.nav-icon
		margin-left: 0
		margin-right: 10px

.btn-row-mid
	flex(mid)
	margin: 30px 0

.btn--full
	width: 100%
	display block