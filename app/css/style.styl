// grid
.main-grid
	display: grid
	grid-gap 20px
	grid-template-columns: repeat(4, 1fr)
	margin-bottom: 60px
.card-el
	padding: 30px
	//height: 270px
	f()
	fl()
	justify-content space-between
	align-items: baseline
	bg-full()
	border 1px solid $border-color
	position relative
	min-height 240px
	&:nth-child(1)
		grid-column 1/4
	&:before
		content ''
		background-image: linear-gradient(90deg, rgba(0,0,0,1) 0%, rgba(161,161,161,0) 70%, rgba(255,255,255,0.25) 100%);
		position absolute
		top 0
		left 0
		width: 100%
		height: 100%
.card-el__title
	margin-bottom: 20px
	font-weight: 700
	position relative
	margin-left: -30px
	padding: 3px 10px 3px 20px
	background: $gray
	display inline-block
	@extend .type--mdx
	font-family: "Handbook"
.card-el__title--lg
	@extend .type--xl
.card-list
	f()
	fl()
.card-list__el
	color white
	margin-bottom: 7px
	position: relative
	padding-left: 10px
	&:last-child
		margin-bottom: 0
	&:hover
		color $mark
	&:before
		content ''
		round()
		position absolute
		size 6px
		top 6px
		left -5px
		background: $mark
	span
		link(#ffffff36)
		position relative
		line-height: 1
// grid === end

.section
	padding: 80px 0
	position relative
	overflow hidden
.unit
	position absolute
	width: 15%
	height: 200%
	top -20%
.unit--mark
	background: $mark
.unit--dark
	background: $dark
.unit--left
	transform rotate(10deg)
	left -10%
.unit--right
	transform rotate(10deg)
	right -5%

.section--gray
	background: #eaebec
.section-title
	@extend .type--xl
	font-weight: 700
	font-family: "Handbook"
	up()
	margin-bottom: 30px

// slider
.slider-item--extend
	.slick-slide
		margin: 0 10px
	.slick-list
		margin: 0 -10px

.slider-wrap--arrow
	flex(between)
	.slider-item
		width: calc(100% - 100px)

.slider-wrap--arrow-in
	position relative
	margin-bottom: 100px
	.slider-control-wrap
		position absolute
		top 0
		right 0
.slider-control-wrap
	f()
	fl()
	width: 40px
	.slider-control
		padding: 60px 10px
		flex(mid)
		cp()
		.icon
			size 18px
	.slider-control--left
		background: white
		border 1px solid $gray
	.slider-control--right
		background: $mark
		border 1px solid transparent
		.icon
			fill white

.slick-dots
	+below(720px)
		bottom -20px
	width: 100%
	display: flex !important
	align-items: center
	justify-content: center
	bottom -50px
	li
		+below(720px)
			size 10px
			flex(mid)
	.dot
		+below(720px)
			flex(mid)
			size 6px
		background: $mark
		width: 20px
		height: 4px
		display: block
		br(3px)
		opacity: .2
	.slick-active
		.dot
			opacity: 1
// slider === end

