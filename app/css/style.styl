	border 1px solid $border-color
	flex(between)
	margin-bottom: 20px
	tr()
	&:hover
		border 1px solid $mark

	.icon
		size 34px
		fill $mark
		margin-right: 10px
	span
		display inline-block
		width calc(100% - 40px)
		font-size: 12px

.pag
	f()
	fw()
	margin: 40px 0
.pag__el
	flex(mid)
	cp()
	tr()
	margin: 10px
	padding: 10px 15px
	border 1px solid $border-color
	display: inline-block
	&:hover
		border-color $mark
		color $mark
.pag__el--active
	border-color $mark
	color $mark