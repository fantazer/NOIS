					.modal-img
						img(src="img/work.svg", alt="")
					.modal-title.modal-title--clear Отзыв отправлен
					.modal-text.type--center Спасибо за ваш отзыв, мы ценим внимание каждого клиента и дорожим им
					input(type="submit" value="Хорошо").btn--md.btn--mark.btn--full.modal-hide
			// true-action === end


			// profile
			.modal(data-modal="profile")
