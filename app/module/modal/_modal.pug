mixin modal()
	.modal-layer
		.modal-filter
		.modal-wrap
			// enter
			.modal(data-modal="reg")
				.modal-content
					.modal-close
						+icon("close","icon")
					.modal-title Регистрация
					.modal-text Заполните необходимые поля для регистрации в личном кабинете
					.input-cont
						.input-row
							input(type="text" name="name" placeholder="Ваш логин").input
					.input-cont
						.input-row
							input(type="text" name="name" placeholder="Ваша почта").input
					.input-cont
						.input-row
							input(type="text" name="name" placeholder="Пароль").input
					.login-remember
						.check-el
							label.style-label.style-label--checkbox
								input(type="checkbox").style-input
								.style-input-element
									+icon("checked","icon-check")
								.style-input-text Cогласен с #[a(href="#") условиями обработки]&nbsp;персональных данных

					input(type="submit" value="Войти").modal-send
			// enter === end

			// enter
			.modal(data-modal="enter")
				.modal-content
					.modal-close
						+icon("close","icon")
					.modal-title Вход в личный кабинет
					.input-cont
						.input-row
							input(type="text" name="name" placeholder="Ваш логин").input
					.input-cont
						.input-row
							input(type="text" name="name" placeholder="Пароль").input
					input(type="submit" value="Войти").modal-send
					.modal-link Забыл пароль
			// enter === end



			// location
			.modal(data-modal="location")
				.modal-content
					.modal-close
						+icon("close","icon")
					.modal-title Ваш город
					.modal-text Выберите свой город для отображения актуальных товаров и цен
					.location-list-wrap
